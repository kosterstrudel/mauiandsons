<div class="container">
    <div class="margin-bottom-50 margin-top-50">
        <div class="subscible-wrapper subscible-inline">



            {% assign newletter_title= settings.newletter_title %}
            {% assign newletter_des= settings.newletter_des %}
            {% assign newletter_button= settings.newletter_button %}
            {% assign newletter_input= settings.newletter_input %}
            {% if settings.newsletter_form_action != blank %}
                {% assign form_action = settings.newsletter_form_action %}
            {% else %}
                {% assign form_action = '#' %}
            {% endif %}


            <div class="row">
                <div class="col-md-3">
                    <h2 style="margin-top: -10px;margin-bottom: 0px;">{{ newletter_title }}</h2>
                </div>

                <div class="col-md-3">
                    <div class="subscribe-comment">
                        <p>{{ newletter_des }}</p>
                    </div>
                </div>

                <div class="col-md-6">


                    <form action="{{ form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" class="subscible-form">
                        <div class="form-group">
                            <label class="sr-only" for="subscribe-email">Email</label>
                            <input class="form-control" value="" placeholder="Enter your email address" name="EMAIL" id="mail" aria-label="translation missing: en.general.newsletter_form.newsletter_email" autocorrect="off" autocapitalize="off" type="email">

                        </div>

                        <div class="form-submit">
                            <input class="btn btn-lg btn-primary" name="subscribe" id="subscribe" value="Subscribe email" type="submit">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

